    <div class="page-wrapper compact-wrapper" id="pageWrapper">
        <!-- Page Header Start-->
        <%- include('Header.ejs')%>
            <!-- Page Header Ends                              -->
            <!-- Page Body Start-->
            <div class="page-body-wrapper sidebar-icon">
                <!-- Page Sidebar Start-->
                <%- include('SideMenu.ejs')%>

                    <!-- Container-fluid starts-->
                    <div class="page-body">
